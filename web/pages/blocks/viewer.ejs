<div class="modal fade" id="ViewerModal" full=1 tabindex="-1" role="dialog" aria-labelledby="ViewerModalLabel" style="display:none">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="height:auto">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="ViewerModalLabel">Recording Viewer</h4>
      </div>
      <div id="viewer-pane" class="modal-body vbox hbox stretch">
            <aside class="lter"><div class="viewer-holder"><div class="film"></div><div class="viewer text-center"></div></div></aside>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-ghost btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-ghost btn-primary hidden">Save changes</button>
      </div>
    </div>
  </div>
</div>
<style>
    #viewer-pane{overflow: hidden}
    #viewer-pane .viewer-holder,#viewer-pane .viewer-holder .viewer,#viewer-pane .viewer-holder .film{position:absolute;width:100%;height:100%;}
    #viewer-pane .viewer-holder .film{z-index:2;}
</style>
<script>
$(document).ready(function(){
    $(window).resize(function(e){
        e.ee=$('#viewer-pane iframe');e.ww=e.ee.width(),e.hh=e.ee.height();
        e.e=$('#viewer-pane .viewer-holder');e.w=e.e.width();e.h=e.e.height();
        e.s = Math.min(e.w / e.ww,e.h / e.hh)-0.2;e.ee.css('transform',"scale("+e.s+")");
    })
})
</script>